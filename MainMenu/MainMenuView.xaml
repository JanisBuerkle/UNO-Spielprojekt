<UserControl x:Class="UNO_Spielprojekt.MainMenu.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resources="clr-namespace:UNO_Spielprojekt.Resources"
             mc:Ignorable="d"
             Name="Control">
    <Grid DataContext="{Binding ElementName=Control, Path=ViewModel}" Style="{StaticResource GridBackgroundStyle}">
        <Button Command="{Binding GoToSettings}" Style="{StaticResource SettingsButtonStyle}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Command="{Binding GoToAddPlayerCommand}" Style="{StaticResource MainMenuButtonStyle}"
                    Content="{x:Static resources:Resource.Play}"/>
            <Button Command="{Binding GoToScoreboardCommand}" Style="{StaticResource MainMenuButtonStyle}"
                    Content="{x:Static resources:Resource.Scoreboard}"/>
            <Button Command="{Binding ExitApplicationCommand}" Style="{StaticResource MainMenuButtonStyle}"
                    Content="{x:Static resources:Resource.Exit}"/>
        </StackPanel> 
    </Grid>
</UserControl>